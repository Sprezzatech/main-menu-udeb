#!/bin/sh -e
#
# Usage: var=`debconf-get template 2>&1`

# Hack to work around the fact that confmodule do not activate cdebconf
if [ ! "$DEBIAN_HAS_FRONTEND" ] ; then
    DEBIAN_HAS_FRONTEND=1
    exec /usr/share/debconf/frontend $0 "$@"
fi

. /usr/share/debconf/confmodule

db_get "$1"

# stdout is sent to debconf.  using stderr instead
echo $RET 1>&2
