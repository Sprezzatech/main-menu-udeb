#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PACKAGE=rootskel
VERSION=$(shell dpkg-parsechangelog | grep ^Version: | cut -d ' ' -f 2)
ARCH=$(shell dpkg --print-architecture)
FILENAME=$(PACKAGE)_$(VERSION)_$(ARCH).udeb
PRIORITY=$(shell grep ^Priority: debian/control | cut -d ' ' -f 2)

# This is the debhelper compatability version to use.
export DH_COMPAT=2

build: build-stamp
build-stamp: build-locale
	dh_testdir
	mkdir -p build-tree
	cp -a src/* build-tree/.
	find build-tree -depth -type d -path "*CVS*" -exec rm -rf {} \;

	touch build-stamp

build-locale: build-tree/usr/lib/locale/C.UTF-8
build-tree/usr/lib/locale/C.UTF-8: debian/C.UTF-8
	mkdir -p build-tree/usr/lib/locale
	localedef -i "debian/C.UTF-8" -f "UTF-8" \
	  "build-tree/usr/lib/locale/C.UTF-8" 

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -rf build-tree
	rm -f debian/files~
	dh_clean

# cvs update -P will remove these dirs if they are empty
DIRS=dev proc var/log var/lib/apt-install mnt floppy usr/lib/prebaseconfig.d

install: build
	dh_testdir
	dh_testroot
	mkdir -p debian/rootskel/
	cp -a build-tree/* debian/rootskel/
	$(foreach DIR, $(DIRS), \
	(mkdir -p debian/rootskel/$(DIR) ) ; )

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	install -d -o 0 -g 0 -m755 debian/rootskel/DEBIAN
	debian/templates-build.pl $(ARCH) < debian/templates > debian/rootskel/DEBIAN/templates
	chown 0:0 debian/rootskel/DEBIAN/templates
	chmod 644 debian/rootskel/DEBIAN/templates
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_link /proc/mounts /etc/mtab 
	dh_gencontrol -- -fdebian/files~ 
	dpkg-distaddfile $(FILENAME) debian-installer $(PRIORITY) 
	dh_builddeb --filename=$(FILENAME)

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
