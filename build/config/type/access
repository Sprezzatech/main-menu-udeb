# How big a floppy image should I make? (in kilobytes)
FLOPPY_SIZE=1440
KERNELNAME=
DISK_LABEL="root floppy"
# Other things that need buildin
EXTRA_FLOPPIES=access_drivers 

EXTRA_TARGETS=$(patsubst %,%-stamp, $(EXTRA_FLOPPIES))

EXTRA_IMAGES= $(patsubst %,$(DEST)/%-image.img, $(EXTRA_FLOPPIES))

EXTRA_STATS= $(patsubst %,%-stats,$(EXTRA_FLOPPIES))

DRIVERFD_UDEBS = \
	$(shell for target in $(EXTRA_FLOPPIES) ; do \
		./pkg-list $$target $(KERNEL_FLAVOUR) $(KERNELIMAGEVERSION); \
	done)

# List here any libraries that need to be put on the system. Generally
# this is not needed except for libnss_* libraries, which will not be
# automatically pulled in by the library reduction code. Wildcards are
# allowed.
EXTRALIBS += /lib/libnss_dns* /lib/libresolv*
