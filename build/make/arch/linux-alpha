ISO = $(DEST)/$(TYPE).iso

arch-image: $(INITRD)

# Copy files somewhere the CD build scripts can find them
cd_content: arch-image
	# copy ramdisk and kernel
	mkdir -p $(TEMP)/iso/boot $(TEMP)/iso/etc
	cp $(DEST)/cdrom-initrd.gz $(TEMP)/iso/boot/root.bin
	cp $(TEMP)/vmlinuz $(TEMP)/iso/boot/linux
	cp boot/alpha/aboot.conf $(TEMP)/iso/etc/
	cp /boot/bootlx $(TEMP)/iso/boot

cd_image: cd_content
	mkisofs -r -J -o $(ISO) $(TEMP)/iso

	# make bootable for SRM
	isomarkboot $(ISO) /boot/bootlx
