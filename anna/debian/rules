#!/usr/bin/make -f

# This is the debhelper compatability version to use.
export DH_COMPAT=2

# Make debhelper not generate any maint scripts.
export DH_OPTIONS=-n

ARCH_PACKAGES=$(shell dh_listpackages -a)
INDEP_PACKAGES=$(shell dh_listpackages -i)
VERSION=$(shell dpkg-parsechangelog | grep ^Version: | cut -d ' ' -f 2)
ARCH=$(shell dpkg --print-architecture)

build: build-stamp
build-stamp:
	dh_testdir
# Make small unless we are building a debug package.
ifeq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
	$(MAKE) small
else
	$(MAKE) DEBUG=1
endif
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	$(MAKE) clean
	dh_clean

binary-indep: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdebconf -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	$(foreach PACKAGE, $(INDEP_PACKAGES), \
	  dh_gencontrol -p $(PACKAGE) -- -n$(PACKAGE)_$(VERSION)_all.udeb; \
	  dh_builddeb -p $(PACKAGE) --filename=$(PACKAGE)_$(VERSION)_all.udeb; \
	)

binary-arch: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs -p anna var/cache/anna
	dh_install -p anna anna usr/bin
	dh_installdebconf -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
ifeq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
	dh_strip -a
endif
	$(foreach PACKAGE, $(ARCH_PACKAGES), \
	  dh_gencontrol -p $(PACKAGE) -- -n$(PACKAGE)_$(VERSION)_$(ARCH).udeb; \
	  dh_builddeb -p $(PACKAGE) --filename=$(PACKAGE)_$(VERSION)_$(ARCH).udeb; \
	)

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
