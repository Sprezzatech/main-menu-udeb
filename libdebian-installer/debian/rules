#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DEB_HOST_ARCH  ?= $(shell dpkg-architecture -qDEB_HOST_ARCH)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

VERSION = $(shell dpkg-parsechangelog | grep ^Version: | cut -d ' ' -f 2)

UDEB_PACKAGES = libdebian-installer-extra4-di
DEB_PACKAGES_DEBHELPER = $(foreach PACKAGE,$(UDEB_PACKAGES),-N $(PACKAGE))

CFLAGS = -Wall -W -Werror -gstabs

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -Os -fomit-frame-pointer
endif

export CFLAGS

build/config.status: configure
	dh_testdir
	
	-mkdir build
	cd build && \
	../configure \
		--host=$(DEB_HOST_GNU_TYPE) \
		--build=$(DEB_BUILD_GNU_TYPE) \
		--prefix=/usr \
		--mandir=\$${prefix}/share/man \
		--infodir=\$${prefix}/share/info --enable-maintainer-mode

build: build-stamp
build-stamp:  build/config.status
	dh_testdir

	$(MAKE) -C build
	$(MAKE) -C build/doc doc

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	rm -rf build

ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	-cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	-cp -f /usr/share/misc/config.guess config.guess
endif

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(MAKE) -C build install DESTDIR=$(CURDIR)/debian/tmp

	install $(CURDIR)/debian/tmp/usr/lib/libdebian-installer-extra.so.4 $(CURDIR)/debian/libdebian-installer-extra4-di/lib
	dh_install --sourcedir=debian/tmp

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs $(DEB_PACKAGES_DEBHELPER)
	dh_installdocs $(DEB_PACKAGES_DEBHELPER)
	dh_installexamples
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	d_python
	dh_makeshlibs -n -V $(DEB_PACKAGES_DEBHELPER)
	dh_installdeb
	dh_shlibdeps -p libdebian-installer4 -p libdebian-installer4-dev
	dh_shlibdeps -p libdebian-installer-extra4 -p libdebian-installer-extra4-di -- -L$(CURDIR)/debian/libdebian-installer-extra4.shlibs.local
	dh_gencontrol $(DEB_PACKAGES_DEBHELPER)
	dh_md5sums $(DEB_PACKAGES_DEBHELPER)
	dh_builddeb $(DEB_PACKAGES_DEBHELPER)
	@$(foreach PACKAGE,$(UDEB_PACKAGES), \
	  dh_gencontrol -p $(PACKAGE) -- -n$(PACKAGE)_$(VERSION)_$(DEB_HOST_ARCH).udeb; \
	  dh_builddeb -p $(PACKAGE) --filename=$(PACKAGE)_$(VERSION)_$(DEB_HOST_ARCH).udeb; \
	)

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
