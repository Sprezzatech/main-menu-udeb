#!/bin/sh
# grub-install fails if /boot is an xfs partition. Detect and warn.
if [ "`udpkg --print-architecture`" != i386 ]; then
	exit 0
fi

. /lib/partman/definitions.sh

get_xfs_root_boot () {
	(for i in /lib/partman/fstab.d/*; do
		[ -x "$i" ] || continue
		$i
	done) | 
	while read fs mp type options dump pass; do
		if [ "$mp" = / ]; then
			echo root_type=$type
		elif [ "$mp" = /boot ]; then
			echo boot_type=$type
		fi
	done
}
eval "$(get_xfs_root_boot)"

if [ "$boot_type" = xfs ]; then
	db_input critical partman-xfs/xfs_boot || true
	db_go || exit 1
	db_get partman-xfs/xfs_boot
	if [ "$RET" = true ]; then
		exit 1
	fi
fi

if [ "$boot_type" = "" ] && [ "$root_type" = xfs ]; then
	db_input critical partman-xfs/xfs_root || true
	db_go || exit 1
	db_get partman-xfs/xfs_root
	if [ "$RET" = true ]; then
		exit 1
	fi
fi
