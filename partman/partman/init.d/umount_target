#!/bin/sh

set -e

cat /proc/mounts |
while read dev dir type options dump pass; do
    echo $dir
done |
grep '^/target' | 
sort |
{
    # We miss the option -r of sort
    dirs=''
    while read dir; do
	dirs="$dir
$dirs"
    done
    echo -n "$dirs"
} |
while read dir; do
    umount $dir
done

cat /proc/swaps | grep '^/dev' \
    | while read path x; do
	  swapoff $path
      done

