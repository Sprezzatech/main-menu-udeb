#!/bin/sh
# Hack around bug #250427
set -e
FILE=/target/etc/mdadm/debian.conf
if [ -e $FILE ]; then
	sed 's/AUTOSTART=false/AUTOSTART=true/' < $FILE > $FILE.new
	mv -f $FILE.new $FILE
fi

# Just to make sure.. (Hack around #231823)
mkdir -p /target/etc/mdadm
cp /etc/mdadm.conf /target/etc/mdadm/mdadm.conf
