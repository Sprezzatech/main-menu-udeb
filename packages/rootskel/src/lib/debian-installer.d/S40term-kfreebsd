export LANG=C

if [ "$TERM" = cons25 ] || [ "$TERM" = xterm ] ||Â [ "$TERM" = linux ] ; then
	# Enable UTF-8 locale if it is available
	if [ -d /usr/lib/locale/C.UTF-8 ]; then
		TERM_UTF8=yes
		: >/var/lib/UTF-8
		export LANG=C.UTF-8
	fi
fi

case $(tty) in
	/dev/ttyv[0-f]*|/dev/ttyd[0-f]*)
		sysctl "kern.consmute=1" > /dev/null
		;;
	*)
		;;
esac
