#!/usr/bin/make -f

ARCH=$(shell dpkg --print-architecture)

build: debian/rootskel-locale/usr/lib/locale/C.UTF-8 debian/templates

debian/rootskel-locale/usr/lib/locale/C.UTF-8: debian/C.UTF-8
	mkdir -p debian/rootskel-locale/usr/lib/locale
	localedef -i "debian/C.UTF-8" -f "UTF-8" \
	  "debian/rootskel-locale/usr/lib/locale/C.UTF-8" 

debian/templates: debian/templates-arch
	debian/templates-build.pl $(ARCH) < $< > $@

clean:
	dh_testdir
	dh_testroot
	dh_clean debian/templates

install: build
	dh_testdir
	dh_testroot
	dh_installdirs
	$(MAKE) -C src DESTDIR=$(CURDIR)/debian/rootskel/

	# TODO make this be in the Makefiles too, instead of done here..
	mkdir -p debian/rootskel-bootfloppy/sbin/
	install -m755 src/sbin/init.bootfloppy debian/rootskel-bootfloppy/sbin/init

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_link /proc/mounts /etc/mtab 
	dh_gencontrol
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
