Template: debian-installer/framebuffer
Type: boolean
Default: true
Description: enable frame buffer console on boot

Template: debian-installer/kernel/commandline
Type: string
Default: ro
Default[s390]: ro vmpoff="LOGOFF"
Description: kernel commandline

Template: debian-installer/kernel/image
Type: string
Default: kernel-image
Default[hppa]: kernel-image-2.4.20-32
Default[i386]: kernel-image-2.4.25-1-386
Default[ia64]: kernel-image-2.4.25-itanium-smp
Default[s390]: kernel-image-2.4.21-1-s390
Description: default kernel image

Template: debian-installer/kernel/image-2.6
Type: string
Default: kernel-image
Default[i386]: kernel-image-2.6.3-1-386
Description: default kernel image (2.6)

Template: debian-installer/kernel/linux/devfs
Type: boolean
Default: false
Description: enable devfs (linux only)

Template: debian-installer/kernel/linux/initrd
Type: boolean
Default: true
Default[s390]: false
Default[hppa]: false
Default[mips]: false
Default[mipsel]: false
Default[powerpc]: false
Default[m68k]: false
Description: kernel needs an initrd (linux only)
  Setting this to true makes base-installer set 'do_initrd=yes'
  in /etc/kernel-img.conf.

Template: debian-installer/kernel/linux/link_in_boot
Type: boolean
Default: false
Default[sparc]: true
Default[hppa]: true
Description: kernel needs a link in /boot/ (linux only)
  Setting this to true makes base-installer include 'link_in_boot=yes'
  in /etc/kernel-img.conf.

Template: debian-installer/kernel/subarchitecture
Type: string
Description: sub architecture

