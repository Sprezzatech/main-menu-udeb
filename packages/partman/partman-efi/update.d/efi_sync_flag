#!/bin/sh

# This script removes the efi flag for partitions whose method is not
# efi and sets it for partition whose method is efi

. /lib/partman/definitions.sh

dev=$1
num=$2
id=$3
size=$4
type=$5
fs=$6
path=$7

cd $dev

if [ $fs = free ]; then
    exit 0
fi

method=
if [ -f $id/method ]; then
    method=$(cat $id/method)
fi

flags=''
open_dialog GET_FLAGS $id
while { read_line flag; [ "$flag" ]; }; do
    if [ "$flag" != boot ]; then
	if [ "$flags" ]; then
	    flags="$flags
$flag"
	else
	    flags="$flag"
	fi
    fi
done
close_dialog

if [ "$method" = efi -a ! -f $id/bootable ]; then
    open_dialog SET_FLAGS $id
    write_line "$flags"
    write_line boot
    write_line NO_MORE
    close_dialog
    >$id/bootable
    >$id/efi_bootable
    RET=''
    db_metaget partman/filesystem_short/efi description || RET='EFI'
    printf "${RET:-efi}" >$id/visual_filesystem
    printf "${RET:-efi}" >$id/visual_mountpoint
elif [ "$method" != efi -a -f $id/bootable -a -f $id/efi_bootable ]; then
    open_dialog SET_FLAGS $id
    write_line "$flags"
    write_line NO_MORE
    close_dialog
    rm $id/bootable
    rm $id/efi_bootable
    rm $id/visual_filesystem
    rm $id/visual_mountpoint
fi
