#!/bin/sh

dev=$2
id=$3

[ -d $dev/$id ] || mkdir $dev/$id

if [ -f $dev/$id/method ]; then
    old_method=$(cat $dev/$id/method)
else
    old_method=do_not_use
fi

echo swap >$dev/$id/method
# if the old method was the same keep the old setting
if [ "$old_method" != swap ]; then
    >$dev/$id/format
fi
if [ -f $dev/$id/use_filesystem ]; then
    rm $dev/$id/use_filesystem
fi
