#!/bin/sh

[ -d /var/lib/partman ] || mkdir /var/lib/partman

cat /proc/modules | 
while read module_name x; do
    if [ "$module_name" = reiserfs ]; then
	>/var/lib/partman/reiserfs
	exit 0
    fi
done

if modprobe reiserfs; then
    >/var/lib/partman/reiserfs
fi

if grep -q reiserfs /proc/filesystems; then
    >/var/lib/partman/reiserfs
fi
