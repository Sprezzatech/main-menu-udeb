#!/bin/sh

. /lib/partman/definitions.sh

dev="$1"
id="$2"
property="$3"

db_metaget partman-newworld/text/newworld description

# The file system "newworld" (in fact hfs) is available only for
# newworld partitions.
[ -f "$id/method" ] || exit 0
method="$(cat "$id/method")"
if [ "$method" = newworld ]; then
    echo newworld
fi
