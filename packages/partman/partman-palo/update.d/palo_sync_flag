#!/bin/sh

# This script removes the palo flag for partitions whose method is not
# palo and sets it for partition whose method is palo

. /lib/partman/definitions.sh

dev=$1
num=$2
id=$3
size=$4
type=$5
fs=$6
path=$7

cd $dev

if [ $fs = free ]; then
    exit 0
fi

method=
if [ -f $id/method ]; then
    method=$(cat $id/method)
fi

has_palo=no
flags=''
open_dialog GET_FLAGS $id
while { read_line flag; [ "$flag" ]; }; do
    if [ "$flag" != palo ]; then
	if [ "$flags" ]; then
	    flags="$flags
$flag"
	else
	    flags="$flag"
	fi
    else
	has_palo=yes
    fi
done
close_dialog

if [ "$method" = palo -a "$has_palo" = no ]; then
    open_dialog SET_FLAGS $id
    write_line "$flags"
    write_line palo
    write_line NO_MORE
    close_dialog
elif [ "$method" != palo -a "$has_palo" = yes ]; then
    open_dialog SET_FLAGS $id
    write_line "$flags"
    write_line NO_MORE
    close_dialog
fi
