#!/bin/sh

. /lib/partman/definitions.sh

dev=$1
num=$2
id=$3
size=$4
type=$5
fs=$6
path=$7
name=$8

cd $dev

[ -f $id/method ] || exit 0
method=$(cat $id/method)

case "$method" in
    raid)
	db_metaget partman/method_short/raid description || RET=''
	printf "${RET:-raid}" >$id/visual_filesystem
	>$id/visual_mountpoint
	;;
esac
