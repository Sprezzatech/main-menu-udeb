#!/bin/sh
# The debian initrd does not currently support md root or boot.

. /usr/share/debconf/confmodule

for dir in $(find /var/lib/partman/devices/=dev=md* -type d 2>/dev/null); do
	if [ -d "$dir" ] && [ -e "$dir/mountpoint" ]; then
		mpoint=$(cat "$dir/mountpoint")
		if [ "$mpoint" = "/" ] || [ "$mpoint" = "/boot" ]; then
			db_input critical partman-md/md_root_boot || true
			db_go || exit 1
			db_get partman-md/md_root_boot
			if [ "$RET" = false ]; then
				exit 1
			fi
		fi
	fi
done
