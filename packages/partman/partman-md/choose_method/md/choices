#!/bin/sh

. /lib/partman/definitions.sh

dev=$1
id=$2

cd $dev

md=no
open_dialog VALID_FLAGS $id
while { read_line flag; [ "$flag" ]; }; do
    if [ "$flag" = raid ]; then
	md=yes
    fi
done
close_dialog

if [ $md = no ]; then
    exit 0
fi

#db_metaget partman-md/text/method description

#printf "md\t${RET}\n"
printf "md\tUse as RAID thingie\n"

