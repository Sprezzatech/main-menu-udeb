#!/bin/sh
QUEUE=/var/lib/register-module
TYPE=options
PARAMS_ONLY=0
ADD_PARAMS=1

if [ "$1" = "-t" ]; then
	TYPE=$2
	shift 2
fi
if [ "$1" = "-p" ]; then
	PARAMS_ONLY=1
	shift 1
fi
if [ "$1" = "-a" ]; then
	ADD_PARAMS=1
	shift 1
fi

MODULE=$1
shift
PARAMS="$@"

QUEUEFILE=$QUEUE/$MODULE.load
PARAMFILE=$QUEUE/$MODULE.params

mkdir -p $QUEUE
if [ "$PARAMS_ONLY" = 0 ]; then
	touch $QUEUEFILE
fi
if [ "$ADD_PARAMS" = 1 ]; then
	PARAMS="$PARAMS $(grep "^$TYPE:" $PARAMFILE 2>/dev/null | sed "s/^$TYPE://")"
fi
grep -v "^$TYPE:" $PARAMFILE > $PARAMFILE.new
mv $PARAMFILE.new $PARAMFILE
[ -n "$PARAMS" ] && echo "$TYPE:$PARAMS" >> $PARAMFILE

if [ -n "$PARAMS" ] && [ "$TYPE" = options ]; then
	for file in /etc/modules.conf /etc/modprobe.conf; do
		if [ -e "$file" ]; then
			grep -v "$MODULE " $file > $file.new
			mv $file.new $file
		else
			touch $file
		fi
		echo "options $MODULE $PARAMS" >> $file
	done
fi
