include ../globalmakeflags

VPATH = $(srcdir)/man

CENTER=Debconf
MANPAGES=dpkg-preconfigure.8 dpkg-reconfigure.8 debconf.7

all: $(MANPAGES)

$(MANPAGES): SFX=$(subst .,,$(suffix $@))

$(MANPAGES):
	@$(POD2MAN) --section=$(SFX) --center=$(CENTER) -d$(CENTER) $(srcdir)/man/$(basename $@).pod > $(basename $@).$(SFX)

install: $(MANPAGES)
	install -d -m 755 $(DESTDIR)${mandir}/man7
	install -d -m 755 $(DESTDIR)${mandir}/man8
	@for m in $(MANPAGES); do \
		install -m 644 $$m $(DESTDIR)${mandir}/man$${m#*.}/; \
	done

clean:
	rm -f *.[0-9]
