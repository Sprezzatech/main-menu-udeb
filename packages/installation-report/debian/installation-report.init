#!/bin/sh
# This script is a temporary workaround and will be removed once d-i beta2
# is obsolete. See changelog entry 2.14.
set -e
#DEBHELPER#

for file in /var/log/installer/cdebconf/*.dat \
	/var/log/installer/syslog /var/log/installer/messages \
	/var/log/installer/partman; do
	if [ -e "$file" ]; then
		# Ignore failures due to ro filesystems or whatever.
		chmod 600 $file 2>/dev/null || true
	fi
done
