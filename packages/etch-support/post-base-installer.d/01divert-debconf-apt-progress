#! /bin/sh

VER=$(chroot /target dpkg -l debconf | \
	grep ^ii | sed "s/.*debconf *\([^ ]*\).*/\1/")
if chroot /target dpkg --compare-versions "$VER" ge 1.5.11etch2; then
	# Version is high enough
	exit 0
fi

log-output -t etch-support chroot /target dpkg-divert --package etch-support \
	--rename --quiet --add /usr/bin/debconf-apt-progress
cp /usr/share/etch-support/debconf-apt-progress /target/usr/bin/
