#!/bin/sh

set -e

# Install laptop-detect on architectures known to have laptops
case "$(archdetect)" in
	i386/*|amd64/*|powerpc/*)
	    in-target sh -c "$config debconf-apt-progress --no-progress --logstderr -- apt-get -o APT::Install-Recommends=false -q -y -f install laptop-detect" || true
	    ;;
esac
