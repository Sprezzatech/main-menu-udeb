#!/bin/sh

# This script sets method "aboot" for all front-of-disk partitions that
# look like they're made for aboot.

. /lib/partman/definitions.sh

for dev in /var/lib/partman/devices/*; do
    [ -d "$dev" ] || continue
    cd $dev
    partitions=
    open_dialog PARTITIONS
    while { read_line num id size type fs path name; [ "$id" ]; }; do
	if [ "$fs" != free ]; then
	    partitions="$partitions $id"
	fi
    done
    close_dialog

    for id in $partitions; do
	aboot=no
	open_dialog PARTITION_INFO "$id"
	read_line part_num range length type fs path name
	close_dialog
	start=${range%-*}
	if [ "$part_num" = "1" -a "$start" -le "512" -a "$fs" = "unknown" ]
	then
		aboot=yes
	fi
	if [ "$aboot" = yes ]; then
	    [ -d $id ] || mkdir $id
	    echo aboot >$id/method
	fi
    done
done
