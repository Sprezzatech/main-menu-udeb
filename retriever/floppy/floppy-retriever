#!/bin/sh -e

. /usr/share/debconf/confmodule

# FIXME FIXME FIXME
mountfloppy()
{
    if ! mount | cut -d' ' -f3 | grep -q '^/floppy$'; then
        if [ ! -d /dev/floppy ]; then
            modprobe floppy >> /var/log/messages 2>&1
        fi
        if [ ! -d /dev/floppy ]; then
            exit 1
        fi
        if ! lsmod | grep -q ^vfat; then
            modprobe vfat >> /var/log/messages 2>&1
        fi

        choices="`echo /dev/floppy/[0-9] | sed 's/ /, /g'`"
        db_subst retriever/floppy/device CHOICES "$choices" || true
        db_fset retriever/floppy/device seen false || true
        db_input medium retriever/floppy/device || true
        db_go || true
        db_get retriever/floppy/device
        floppydev=$RET

        db_fset retriever/floppy/fstype seen false || true
        db_input low retriever/floppy/fstype || true
        db_go || true
        db_get retriever/floppy/fstype
        case x$RET in
            xFAT)
                fstype=msdos
                ;;
            xFAT32)
                fstype=vfat
                ;;
            xExt2)
                fstype=ext2
                ;;
            *)
                fstype=auto
                ;;
        esac

        mount $floppydev -t$fstype /floppy
    fi
}

case "x$1" in
    xretrieve)
        mountfloppy
        if [ -e /floppy/$2 ]; then
            ln -sf /floppy/$2 "$3"
            exit $?
        else
            exit 1
        fi
        ;;
    xpackages)
        # generate a Packages file based on what udebs are on the floppy
        if [ "$3" != "." ]; then
            # sorry, no compressed files
            exit 1
        fi
        if [ -n "$4" -a "$4" != "main" ]; then
            # only do 'main'
            exit 1
        fi
        mountfloppy
        rm -f "$2"
        touch "$2"
        for filename in /floppy/*.deb /floppy/*.udeb; do
            if [ -f "$filename" ]; then
                udpkg -f "$filename" >> "$2"
                path="`echo "$filename" | sed 's,^/floppy/,,'`"
                echo "Filename: $path" >> "$2"
                echo >> "$2"
            fi
        done
        ;;
    xcleanup)
        umount /floppy || true
        ;;
    *)
        # unknown command
        exit 1
        ;;
esac
