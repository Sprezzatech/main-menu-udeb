prefix=@prefix@
bindir=${prefix}/usr/bin
etcdir=${prefix}/etc
libdir=${prefix}/usr/lib
moddir=${libdir}/cdebconf
sharedir=${prefix}/usr/share/debconf

CC=@CC@
CFLAGS=@CFLAGS@

%.o: %.c
	@echo "Compiling $< to $@"
	@$(CC) $(CFLAGS) -o $@ -c $<

%.opic: %.c
	@echo "Compiling $< to $@ (PIC)"
	@$(CC) $(CFLAGS) -fPIC -o $@ -c $<
