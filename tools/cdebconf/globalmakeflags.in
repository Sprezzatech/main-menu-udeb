prefix=@prefix@
etcdir=@sysconfdir@
bindir=${prefix}/bin
libdir=${prefix}/lib
moddir=${libdir}/cdebconf
sharedir=${prefix}/share/debconf
incdir=${prefix}/include/cdebconf

srcdir=@TOPDIR@/src
builddir=@BUILDDIR@/src

CC=@CC@
CFLAGS=@CFLAGS@
TARGET=@TARGET@

%.o: %.c
	@echo "Compiling $< to $@"
	@$(CC) $(CFLAGS) -I$(builddir) -o $@ -c $<

%.opic: %.c
	@echo "Compiling $< to $@"
	@$(CC) $(CFLAGS) -I$(builddir) -fPIC -o $@ -c $<
