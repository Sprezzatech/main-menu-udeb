#! /bin/sh -e
export LD_LIBRARY_PATH="/target/lib:/target/usr/lib"

choose-yaboot-disk
. /usr/share/debconf/confmodule
db_get yaboot-installer/bootdev
bootdev=$RET

realname=$(basename $(readlink /target/vmlinux))
rm -f /target/boot/vmlinux
ln -s $realname /target/boot/vmlinux
rm -f /target/vmlinux
echo "## Generated by yaboot-installer" > /target/etc/kernel-img.conf
echo "" >> /target/etc/kernel-img.conf
echo "do_symlinks = true" >> /target/etc/kernel-img.conf
echo "image_in_boot = true" >> /target/etc/kernel-img.conf
echo "relative_links = true" >> /target/etc/kernel-img.conf
yabootconfig --quiet --chroot /target --boot "$bootdev"
