#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


PACKAGE=cdrom-detect
VERSION=$(shell dpkg-parsechangelog | grep ^Version: | cut -d ' ' -f 2)
FILENAME=$(PACKAGE)_$(VERSION)_all.udeb
PRIORITY=$(shell grep ^Priority: debian/control | cut -d ' ' -f 2)


# This is the debhelper compatability version to use.
export DH_COMPAT=3

build: build-stamp
build-stamp:
	dh_testdir

	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -f debian/files~
	-$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	$(MAKE) install DESTDIR=`pwd`/debian/cdrom-detect
	mkdir debian/cdrom-detect/etc || true
	echo "alias net-pf-1 off" >debian/cdrom-detect/etc/modules.conf
	echo "alias nls_iso8859-1 off" >>debian/cdrom-detect/etc/modules.conf
	echo "alias nls_cp437 off" >>debian/cdrom-detect/etc/modules.conf


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install partkit
partkit: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	cp debian/menutest debian/cdrom-detect/DEBIAN/menutest	
	chmod 0755 debian/cdrom-detect/DEBIAN/menutest
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb 
	rm debian/cdrom-detect/DEBIAN/conffiles
	dh_shlibdeps
	dh_gencontrol -- -fdebian/files~
	dpkg-distaddfile $(FILENAME) debian-installer $(PRIORITY)
# no md5sums for udebs
#	dh_md5sums
	dh_builddeb --filename=$(FILENAME)

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install partkit
