image=${KERNEL}
    label=SerialLinux
    description="Install with Linux 2.4 (serial console)"
    initrd=${INITRD}
    root=/dev/ram
    append="ramdisk_size=${RAMDISK_SIZE} console=ttyS0,9600n8 DEBIAN_FRONTEND=text --"
    read-only

