#!/bin/sh
set -e

. /usr/share/debconf/confmodule
db_fset di-utils-reboot/really_reboot seen false
db_input critical di-utils-reboot/really_reboot || true
db_go || true
db_get di-utils-reboot/really_reboot

if [ "$RET" = true ]; then
	db_progress START 0 1 di-utils-reboot/progress
	db_progress STEP 1
	/sbin/shutdown
	db_progress STOP
else
	exit 30
fi
